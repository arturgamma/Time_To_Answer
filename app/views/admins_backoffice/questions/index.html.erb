<%# @admins.inspect%>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> Perguntas</h1>
    </div>       
</div>
<hr>
<div class="card-body"> 
    <div class="table-responsive">
        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4"><div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" >
            <table class="table table-bordered dataTable" width="100%" cellspacing="0"  aria-describedby="dataTable_info" style="width: 100%">
            <thead>
                <tr >
                    <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 194.033px;" aria-label="Name: activate to sort column descending" aria-sort="ascending">#</th>
                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 314.683px;" aria-label="Position: activate to sort column ascending"><%= translate_attribute(@questions, :description)%></th>
                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 314.683px;" aria-label="Position: activate to sort column ascending"> <%=translate_attribute(@questions, :subject)%></th>
                    <th>
                        <%=link_to new_admins_backoffice_question_path, class:"icon text-white-50"  do %>
                                <i class="fas fa-plus"> Nova Pergunta</i>  
                        <% end %>  
                    </th>
                </tr>
            </thead>
            <tbody>
                <% @questions.each do |question| %>   
                    <tr >
                        <td > <%= question.id%></td>
                        <td> <%= question.description.truncate(50) %> </td>
                        <td> <%= question.subject.description.truncate(30) %> </td>
                        <td style="witdh: 100px"> 
                            <%=link_to edit_admins_backoffice_question_path(question), class:"btn btn-info btn-circle"  do %>
                                <i class="fas fa-edit"></i>  
                            <% end %>    
                            <%=link_to admins_backoffice_question_path(question), method: :delete, data: {confirm: "Deseja realmente excluir essa pergunta?"}, class:"btn btn-danger btn-circle"  do %>
                                <i class="fas fa-minus"></i>  
                            <% end %>
                        <td>       
                    </tr>
                <% end %>
            </tbody>
            </table>
            <div class="text-center">
                <%= paginate @questions, class:"text-center" %>
            </div>
        </div>
    </div>   
</div>             