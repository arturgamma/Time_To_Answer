<div class = "nested fields"> 
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", placeholder: "Resposta", rows: 2 %>
    </div>
    <div class="form-group">
        <%= f.label :correta? %>
        <%= f.check_box :correct %>
    </div>
    <%= link_to_remove_association "Remover Resposta", f %>
</div>